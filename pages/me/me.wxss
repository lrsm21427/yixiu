.user-info {
  width: 100%;
  height: 100%;
  background-color: #f7f4f4;
  /* border: 1rpx solid #000; */
}

.user-icon {
  display: flex;
  width: 730rpx;
  height: 80rpx;
  margin: 0 0 0 10rpx;
  /* justify-content: center; */
  /* border: 1rpx solid #000; */
}

.top-container {
  /* background-color: #f5f5f5; */
  height: 100%;
  flex-direction: row;
}

.top-container  image{
  width: 100%;
  /* border: 1rpx solid #000; */
  border-radius:0 0 10% 0;
}

.user-icon image{
  border: 5rpx solid rgb(247, 175, 81);
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-top: -10%;
  margin-left: 20rpx;
}

.user-name {
  width: 410rpx;
  margin-left: 10rpx;
  margin-top: -50rpx;
  display: flex;
  /* justify-content: center; */
}

.user-visitor{
  width: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.user-visitor-item {
  width: 150rpx;
  display: flex;
  font-size: 18rpx;
}

.user-introduction {
  font-size: 20rpx;
  margin-left: 40rpx;
}

.user-status {
  display: flex;
  height: 140rpx;
  width: 100%;
  justify-content: center;
}

.user-status-items {
  margin-top: 15rpx;
  display: flex;
  height: 110rpx;
  width: 95%;
  background-color: #fff;
  border-radius:20rpx;
  border: 1rpx solid #d8d6d6;
  box-shadow: 5rpx 5rpx 0 0 #d8d6d6;
  justify-content:space-around;
}

.user-status-item image{
  margin-top: 15rpx;
  display: flex;
  width:50rpx;
  height:50rpx;
}

.user-status-item text {
  margin-top: 5rpx;
  display: flex;
  justify-content: center;
  font-size: 20rpx;
}

.user-trends{
  width: 100%;
  display: flex;
  justify-content: center;
  background-color: #fff;
  border-radius:20rpx;
}

.user-trend{
  font-size: 30rpx;
  display: flex;
  height: 50rpx;
  justify-content: center;
  /* border-right: 1rpx solid #d8d6d6; */
  width: 50%;
}

.user-tc{
  height: 1000rpx;
  width: 95%;
  background-color: #fff;
  border-radius:20rpx;
  margin-left: 2.5%;
  border-radius:20rpx;
  border: 1rpx solid #d8d6d6;
  box-shadow: 5rpx 5rpx 0 0 #d8d6d6;
}

.user-collect {
  font-size: 30rpx;
  height: 50rpx;
  width: 50%;
  display: flex;
  justify-content: center;
}

.user-trends-item {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx solid red;
  display: flex;
}

.trend-information {
  display: flex;
}

.trend-information-name {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.user-trend-item {
  height: 500rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
} 

.trend-user-icon {
  width: 80rpx;
  height: 80rpx;
  margin-left: 30rpx;
}

.trend-time {
  color:#d8d6d6;
}

.trend-text {
  margin-left: 80rpx;
}

.trend-image {
  height: 300rpx;
  margin-left: 50rpx;
}

.trend-notes {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 10rpx;
}

.trend-notes text{
  font-size: 20rpx;
}


.trend-over image{
  width: 40rpx;
  height: 40rpx;
}
.trend-discuss image{
  width: 40rpx;
  height: 40rpx;
}
.trend-retransmission image{
  width: 40rpx;
  height: 40rpx;
}
.trend-support image{
  width: 40rpx;
  height: 40rpx;
}

.trend-over {
  display: flex;
  flex-direction: column;
}
.trend-discuss {
  display: flex;
  flex-direction: column;
}
.trend-retransmission {
  display: flex;
  flex-direction: column;
}
.trend-support {
  display: flex;
  flex-direction: column;
}

