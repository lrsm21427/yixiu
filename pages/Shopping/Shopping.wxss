  /* border-radius: 28rpx 28rpx 0 0; */
  /* display: flex; */
  /* justify-content: space-between; */
}

.shopping-stores {
  display: flex;
  width: 700rpx;
  height: 50rpx;
}

.shopping-store-select {
  height: 30rpx;
  width: 30rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
  border: 0.1rpx solid #e9e7e7;
  border-radius: 50%;
}

.shopping-store {
  margin-top: 7rpx;
  margin-left: 20rpx;
}

.shopping-object {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 150rpx;
}

.shopping-object-select {
  display: flex;
  height: 30rpx;
  width: 30rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
  border: 0.1rpx solid #e9e7e7;
  border-radius: 50%;
  margin-top: 65rpx;
}

.shopping-object image{
  width: 150rpx;
  height: 150rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
}

.object-infomation {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  margin-left: 20rpx;
}

.object-introduction  {
  font-size: 20rpx;
  display: flex;
  color: darkgray;
}

.object-id {
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
  display:flex;
  justify-content: center;
  align-items: center;
}

.object-btn{
  /* width: 10rpx; */
