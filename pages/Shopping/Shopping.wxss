}

.object-selcet {
  width: 440rpx;
  display: flex;
  flex-direction: row;
  height: 150rpx;
  align-items: flex-end;
}

.object-price {
  width: 220rpx;
  display: flex;
  height: 100rpx;
  color: red;
  align-items:flex-end;
}


.object-num {
  display: flex;
  width: 220rpx;
  height: 100rpx;
  margin-right: auto;
  align-items: flex-end;justify-content:flex-end;
}

.object-reduce {
  text-align: center;
  width: 40rpx;
  height: 40rpx;
  border: 0.1rpx solid #e9e7e7;
  border-radius: 50% 0 0 50%;
}

.object-number {
  text-align: center;
  width: 40rpx;
  height: 40rpx;
  border: 0.1rpx solid #e9e7e7;
}

.object-add {
  text-align: center;
  width: 40rpx;
  height: 40rpx;
  border: 0.1rpx solid #e9e7e7;
