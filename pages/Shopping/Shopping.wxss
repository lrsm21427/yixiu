/* pages/Shopping/Shopping.wxss */
.shopping {
  display: flex;
  width: 100%;
  height: 1400rpx;
  flex-direction:column;
  background-color: #f7f4f4;
}

.shopping-select {
  width: 750rpx;
  height: 80rpx;
  display: flex;
  justify-content:space-around;
}

.shopping-select-item {
  width: 200rpx;
  display:flex;
  justify-content: center;
}

.shopping-items {
  width: 100%;
  display: flex;
  justify-content: center;
  background-color: #f7f4f4;
}

.circle-button {
  width: 18px;
  height: 18px;
  border-radius: 50%;
  background-color: #f8f8f8;
  border: #e9e7e7 solid 1rpx;
  margin-top: 60rpx;
  margin-left: 10rpx;
}

.selected {
  background-color: red;
}

.shopping-item {
  margin-bottom: 20rpx;
  background-color: white;
  display:flex;
  flex-direction: column;
  height: 300rpx;
  width: 700rpx;
  border-radius:20rpx;
  border: 0.5rpx solid #e9e7e7;

  /* background-color: #f8f8f8; */
