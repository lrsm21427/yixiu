.swiper image{
  margin-left: 180rpx;
  border-radius: 0 0 20rpx 20rpx;
  height: 100%;
}

.top {
  width: 750rpx;
  height: 50rpx;
  background-color: skyblue;
  border-radius: 0 0 20rpx 20rpx;
}

.search {
  width: 650rpx;
  height: 80rpx;
  background-color: rgb(247 247 247 / 65%);
  border-radius: 30rpx;
  margin-top: 40rpx;
  margin-left: 50rpx;
  display: flex;
}

.search image {
  height: 50rpx;
  width: 50rpx;
  padding: 15rpx;
}

.search input {
  margin-top: 15rpx;
}

.information {
  display: flex;
  flex-direction: column;
}

.user-icon {
  display: flex;
  flex-direction: row;
}

.user-icon image{
  width: 80rpx;
  height: 80rpx; 
  padding: 20rpx;
}

.user-information {
  padding: 20rpx;
}

.user-time {
  color: darkgray;
  margin-top: 10rpx;
  font-size: 20rpx;
}

.information-images {
  width: 100%;
}

.information-image {
  width: 700rpx;
  height: 200rpx;
  margin-left: 25rpx;
  /* border: 1rpx solid red;  */
  border-radius: 60rpx;
}

/* 定义通用样式 */
.chat-button {
  display: inline-block;
  background-color: #449eff; /* 微信蓝色 */
  color: white;
  align-self: center;
  width: 20%;
  padding: 10px 20px;
  border-radius: 25px;
  text-align: center;
  margin-top: 10px;
  font-size: 16px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  transition: background-color 0.3s ease;
}

.chat-button:hover {
  background-color: #005bb5; /* 深蓝色 */
}

.chat-button:active {
  background-color: #003f8a; /* 更深的蓝色 */
}