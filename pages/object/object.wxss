  color: #f8f8f8;
  height: 55rpx;
  /* border: red solid 1rpx; */
  text-align: center;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
}

.fixed-2-shop2 {
  background-color: rgb(241, 100, 100);
